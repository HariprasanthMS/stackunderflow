<ul class="list-group">
  <% @users.each do |user| %>
  <% end %>
</ul>

<% provide(:title, 'All users') %>

<div class="row">
  <aside class="col-md-4">
    <section class="info-section background-common">
      <h1>
        <span class="badge bg-secondary">
          <%= @users.count %>
        </span>
      </h1>
      <h1>
        Total <%= "User".pluralize(@users.count) %>
      </h1>
      <small class="text-muted"></small>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @users.blank? %>
      <div class="empty-content">
        No users available currently
      </div>
    <% else %>   
      <%= will_paginate %>
      <div class="section list-item">
          <% @users.each do |user| %>
            <div class="topic-tag bd-10 w-50">
              <%= render user %>
            </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>