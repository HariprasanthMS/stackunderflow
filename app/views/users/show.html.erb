<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render partial: 'shared/stats',  locals: { user: @user }%>
    </section>
  </aside>
  
  <div class="col-md-8">
    <h1>Questions</h1>
      <ul class="list-group items">
        <% if @other_user_questions.any? %>
          <% @other_user_questions.each do |question| %>
            <%= render partial: 'shared/item', locals: { question: question, answer: @answer } %>
          <% end %>
        <% else %>
          <div class="row empty">
            <%= @user.name %> has no question posted
          </div>
        <% end %>
      </ul>
    </div>
</div>