<div class="question">
  <% user = question.user %>
  <div class="row">
    <div class="col-12 badge d-flex flex-row-reverse question-topic">
      <% question.topics.each do |topic| %>
        <%= link_to topic_path(topic) do %>
          <span class="badge rounded-pill bg-info text-dark mx-1"><%= topic.name%></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="question-content">
    <%= question.content %>
  </div>

  <div class="row justify-content-between question_metadata">
    <div class="col-4">
      <span class="timestamp question-timestamp">
        <%= time_ago_in_words(question.created_at) %> ago.
      </span>
    </div>

    <div class="col-4 d-flex flex-row-reverse">
      <% if current_user?(question.user) %>
        <div class="delete_question">
          <%= link_to question, method: :delete, data: { confirm: "You sure?" } do %>
            <%= image_tag("trash.svg", height: 20, width: 20) %>
          <% end %>          
        </div>
      <% end %>
      <div class="image" style="border-radius: 50%">
        <%= link_to gravatar_for(user, size: 25), question.user %>
      </div>
    </div>
  
  </div>
</div>