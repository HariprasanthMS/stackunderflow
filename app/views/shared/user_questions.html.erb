<div class="row justify-content-center">
  <div class="col-10">
    <% if questions.blank? %>
      <div class="empty-questions">
        <%= empty_text%>
      </div>
    <% else %>
      <div class="suggested-questions">
        <h3><%= title %></h3>
        <ul class="list-group">
          <% questions.each do | question | %>
            <%= render partial: 'shared/item', locals: { question: question, answer: @answer } %>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>