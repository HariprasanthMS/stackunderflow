<div class="d-flex justify-content-center">
    <div class="card p-3 m-0 bd-10">
        <h4 class="mb-0 mt-0 text-center"><%= user.name %></h4>
        <div class="d-flex">
            <div class="image mt-1">
              <%= link_to gravatar_for(user, size: 70), user %>
            </div>
            <div class="ml-3 w-100">
              <div class="p-2 mt-2 bg-primary d-flex justify-content-between text-white stats bd-10">
                <div class="d-flex flex-column col-4 stats text-center">
                  <%= content_tag("span", class: "box-label") do %>
                    <%= link_to "Questions", questions_user_path(user.id)%> 
                  <% end %>
                  <%= content_tag("span", class: "number") do %>
                    <%= link_to user.questions.count , questions_user_path(user.id)%> 
                  <% end %>
                </div>
                <div class="d-flex flex-column col-4  text-center"> 
                  <%= content_tag("span", class: "box-label") do %>
                    <%= link_to "Answers", answered_questions_user_path(user.id)%> 
                  <% end %>
                  <%= content_tag("span", class: "number") do %>
                    <%= link_to user.answers.count, answered_questions_user_path(user.id)%> 
                  <% end %>
                </div>
                <div class="d-flex flex-column col-4  text-center">
                  <%= content_tag("span", class: "box-label") do %>
                    <%= link_to "Votes", voted_questions_user_path(user.id)%> 
                  <% end %>
                  <%= content_tag("span", class: "number") do %>
                    <%= link_to user.votes.count, voted_questions_user_path(user.id)%> 
                  <% end %>  
                </div>
              </div>
              <% unless params["controller"]==UsersController.controller_name && params["action"]=="show"%>
                <div class="button mt-2 d-flex flex-row align-items-center">
                  <%= link_to "View", user_url(user), class: "btn btn-sm btn-outline-warning w-100 bd-10" %>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</div>