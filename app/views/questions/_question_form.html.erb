<%= form_with(model: question, local: true, class: "question-form") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_area :content, placeholder: "Post new question...", required: true %>
  <%= f.text_field :topic_names, placeholder: "Mention relevant topics"%>
  <%= f.submit "Ask", class: "btn btn-outline-warning question_button bd-10 w-100"%>
<% end %>