<% provide(:title, 'Login') %>


<div class="center row justify-content-center login">
  <div class="col-6">
    <h1>Login</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control'  %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control'  %>

      <div class="row">
        <%= f.label :remember_me, class: "checkbox inline col-7 px-0" do %>
          <%= f.check_box :remember_me %>
          <small>Remember me on this computer</small>
        <% end %>
        
        <div class="col-4">
          <%= f.submit "Login to my account", class: "btn" %>
        </div>
      </div>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>