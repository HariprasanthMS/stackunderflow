<%= form_with(model: @answer, local: true, class: "answer-form") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="row justify-content-end">    
    <div class="col-10">
      <%= f.text_area :content, placeholder: "Post your answer..." %>
      <%= f.hidden_field :question_id, value: question.id %>
      <%= f.hidden_field :user_id, value: user.id %>
    </div>
    <div class="col-1 button">
      <%= f.submit "Submit", class: "btn btn-outline-warning bd-10" %>
    </div>
  </div>
<% end %> 